<%- include('partials/header') %>

<div class="container">
    <h1>Looking to get in touch?</h1>
    <p>Fill out the form below and we will get back to you right away.</p>
<form class="" action="/contact" method="post">
  <div class="form-group">
    <label>Name:</label>
    <input class="form-control" type="text" name="name">
  </div>
  <div class="form-group">
    <label>Email:</label>
    <input class="form-control" type="email" name="email"></input>
  </div>
  <div class="form-group">
    <label>Your Message:</label>
    <textarea class="form-control" name="message" rows="10"></textarea>
  </div>
  <br>
  <button class="btn btn-dark" type="submit" name="button">Send Message</button>
</form>

</div>

<%- include('partials/footer') %>
